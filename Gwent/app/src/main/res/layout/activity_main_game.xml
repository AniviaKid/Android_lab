<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/opponent_third"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/opponent_third_num_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/opponent_third"
            android:layout_marginTop="30dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/opponent_second"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/opponent_third"
            android:layout_marginBottom="-105dp"
            android:scrollbars="horizontal"
            ></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/opponent_second_num_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/opponent_second"
            android:layout_marginTop="30dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/opponent_first"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/opponent_second"
            android:layout_marginBottom="-105dp"
            android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/opponent_first_num_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/opponent_first"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/to_hand_dust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="28dp"
            android:textColor="#505050"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/opponent_first_num_power"
            android:layout_marginTop="65dp"
            />
        <TextView
            android:id="@+id/give_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放弃本轮"
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/to_hand_dust"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/oppenent_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="敌方剩余生命：2"
            android:textSize="14dp"
            android:textColor="#ff0000"
            android:layout_alignTop="@+id/to_hand_dust"
            android:layout_marginLeft="170dp"
            />
        <TextView
            android:id="@+id/my_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我方剩余生命：2"
            android:textSize="14dp"
            android:textColor="#00ff00"
            android:layout_alignBottom="@id/to_hand_dust"
            android:layout_marginLeft="170dp"
            />
        <TextView
            android:id="@+id/opponent_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14dp"
            android:textColor="#ff0000"
            android:layout_alignTop="@+id/to_hand_dust"
            android:layout_marginLeft="300dp"
            />
        <TextView
            android:id="@+id/my_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14dp"
            android:textColor="#00ff00"
            android:layout_alignBottom="@+id/to_hand_dust"
            android:layout_marginLeft="300dp"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_third"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/my_third_num_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/my_third"
            android:layout_marginTop="30dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_second"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/my_third"
            android:layout_marginTop="-105dp"
            android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/my_second_num_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/my_second"
            android:layout_marginTop="30dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_first"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/my_second"
            android:layout_marginTop="-105dp"
            android:scrollbars="horizontal"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/my_first_num_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="28dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/my_first"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>

</LinearLayout>